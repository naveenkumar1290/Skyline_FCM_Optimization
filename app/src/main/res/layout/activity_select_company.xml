<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"

            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <!---add your views here-->
            <LinearLayout

                android:layout_width="270dp"
                android:layout_height="match_parent"

                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="10dp">


                <Button
                    android:id="@+id/Btn_SearchByCompany"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_corner_btn2_new"
                    android:gravity="center"

                    android:text="Search by Company"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/btn_text_sky_blue"
                    android:textSize="@dimen/headers" />

                <Button
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="OR"
                    android:textSize="16dp"
                    android:textStyle="normal"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/Btn_SearchByJob"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_corner_btn2_new"
                    android:gravity="center"

                    android:padding="5dp"
                    android:text="Search by Job"
                    android:textAppearance="?android:attr/textAppearanceMedium"

                    android:textColor="@color/btn_text_sky_blue"
                    android:textSize="@dimen/headers"

                    />

                <Button
                    android:id="@+id/scan"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/round_corner_btn2_new"
                    android:gravity="center"
                    android:text="Scan QR Code"
                    android:textAppearance="?android:attr/textAppearanceMedium"

                    android:layout_marginTop="10dp"
                    android:textAllCaps="false"
                    android:textColor="@color/btn_text_sky_blue"
                    android:textSize="@dimen/headers" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="top|right"
            android:clickable="true"
            android:visibility="gone"
            android:src="@drawable/error_1" />
    </FrameLayout>

</LinearLayout>