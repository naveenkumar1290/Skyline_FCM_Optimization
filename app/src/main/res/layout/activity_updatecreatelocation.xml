<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Updatecreatelocation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linerfortime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/merchantname"
                    android:layout_width="0sp"
                    android:layout_height="40sp"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="left"
                    android:layout_weight="2"


                    />

                <TextView
                    android:id="@+id/timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/merchantname"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/merchantname"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:lines="2"
                    android:maxLines="2"
                    android:text="Time Clock 00:00"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/clientname" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/eusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/relativeLayout1">

            <ImageView
                android:id="@+id/missing"
                android:layout_width="100sp"
                android:layout_height="40sp"


                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="Missing Crates "
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/missing"
                android:text="Hallieburtonâ€™s Crates"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/clientname" />

            <android.widget.ImageView
                android:id="@+id/homeacti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:src="@drawable/homeblue" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/eusername1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eusername"
            android:layout_marginTop="10sp"

            >

            <TextView
                android:id="@+id/textView1rr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="Crate's updated location "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text_color_new"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/whole1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/eusername1"
            android:layout_marginTop="10sp">

            <RelativeLayout
                android:id="@+id/whole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eusername1">

                <RelativeLayout
                    android:id="@+id/oklayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/round_corner_shape"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:id="@+id/first"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="3"

                            >

                            <TextView
                                android:id="@+id/textView2t"
                                android:layout_width="0sp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical"
                                android:text="Updated Location" />

                            <EditText
                                android:id="@+id/editText1"
                                android:layout_width="0sp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:editable="false"
                                android:gravity="left"
                                android:paddingLeft="10sp"

                                >


                            </EditText>


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/first1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/first"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/textView2t1"
                                android:layout_width="0sp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical"
                                android:text="Crate Id " />

                            <EditText
                                android:id="@+id/editText11"
                                android:layout_width="0sp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:editable="false"
                                android:gravity="left"
                                android:paddingLeft="10sp">

                            </EditText>


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/first2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/first1"

                            android:weightSum="3"

                            >

                            <TextView
                                android:id="@+id/textView2t2"
                                android:layout_width="0sp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical"
                                android:text="Old Location" />

                            <EditText
                                android:id="@+id/editText12"
                                android:layout_width="0sp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:editable="false"
                                android:gravity="left"
                                android:paddingLeft="10sp">


                            </EditText>


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/first3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/first2"

                            android:weightSum="3"

                            >

                            <TextView
                                android:id="@+id/textView2t3"
                                android:layout_width="0sp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical"
                                android:text="Crate Type" />

                            <EditText
                                android:id="@+id/editText13"
                                android:layout_width="0sp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:editable="false"
                                android:gravity="left"
                                android:paddingLeft="10sp">


                            </EditText>


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/first4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/first3"

                            android:weightSum="3"

                            >

                            <TextView
                                android:id="@+id/textView2t4"
                                android:layout_width="0sp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical"
                                android:text="Description " />

                            <EditText
                                android:id="@+id/editText14"
                                android:layout_width="0sp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:editable="false"
                                android:gravity="left"
                                android:paddingLeft="10sp"

                                >


                            </EditText>


                        </LinearLayout>

                        <!--
                               <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:weightSum="3"
                                   android:id="@+id/first3"
                                   android:visibility="gone"
                                   android:layout_below="@+id/first2"

                                  >

                                   <TextView
                                       android:id="@+id/textView2t3"
                                       android:layout_width="0sp"
                                       android:layout_height="wrap_content"
                                       android:layout_weight="1"
                                       android:text="Updated Location" />

                                   <EditText
                                       android:id="@+id/editText13"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_weight="1"
                                       android:editable="false"
                                       >


                                   </EditText>

                                   <ImageView
                                       android:id="@+id/selectvis3"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_weight="1"

                                        />

                               </LinearLayout>
                                -->

                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="fill_parent"
                    android:layout_height="25sp"
                    android:layout_below="@+id/oklayout"

                    android:layout_marginTop="50sp">

                    <TextView
                        android:id="@+id/useloc"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Are you sure that you want to use this location?"
                        android:textColor="@color/btn_text_sky_blue"
                        android:textSize="14sp" />
                    <!-- android:textAppearance="?android:attr/textAppearanceMedium" -->

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayout1"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:paddingBottom="5sp"
                    android:weightSum="3">

                    <TextView

                        android:id="@+id/gobacktosca"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@drawable/round_corner_btn2_red_new"
                        android:gravity="center"
                        android:minHeight="25dip"
                        android:minWidth="36dip"
                        android:padding="5dp"
                        android:scaleType="center"
                        android:text="No-Scan a different location"
                        android:textColor="@color/red_new" />

                    <TextView
                        android:id="@+id/govleraselect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@drawable/round_corner_btn2_red_new"
                        android:gravity="center"
                        android:minHeight="25sp"
                        android:minWidth="36sp"
                        android:padding="5dp"
                        android:paddingBottom="5sp"
                        android:scaleType="center"
                        android:text="Use only selected Crates"
                        android:textColor="@color/red_new" />


                </LinearLayout>
                <TextView
                    android:id="@+id/gomissi"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"

                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/round_corner_btn2_red_new"
                    android:gravity="center"
                    android:minHeight="25sp"
                    android:layout_below="@+id/ll"
                    android:layout_marginTop="10sp"
                    android:minWidth="36sp"

                    android:padding="5dp"
                    android:scaleType="center"
                    android:text="Select all Crates in this location"
                    android:textColor="@color/red_new" />

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>
