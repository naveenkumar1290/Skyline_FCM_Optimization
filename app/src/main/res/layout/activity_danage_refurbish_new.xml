<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tech.billable_timesheet.Clock_Submit_Type_Activity">


    <LinearLayout
        android:id="@+id/linerfortime"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:background="#ADE3F0"

        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <ImageView
            android:id="@+id/merchantname"
            android:layout_width="70dp"
            android:layout_height="40sp"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/exhibitlogoa" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Timesheet"

                android:textColor="@color/btn_text_sky_blue"
                android:textSize="@dimen/headersname" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgvw_Company_Logo"
                android:layout_width="70dp"
                android:layout_height="40sp"
                android:layout_gravity="right|center_vertical" />


            <TextView
                android:id="@+id/txtvw_Company_Name"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"

                android:textColor="@color/btn_text_sky_blue"
                android:textSize="15sp" />


        </LinearLayout>


        <ImageView
            android:id="@+id/homeimg"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/homeblue"

            android:visibility="visible" />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <Button
            android:id="@+id/btn_StopWork"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:background="@drawable/round_corner_btn2_red_new"
            android:gravity="center"
            android:text="Stop   Work"

            android:textColor="@color/red_new"
            android:textSize="15sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btn_PauseWork"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"


            android:background="@drawable/round_corner_btn2_red_new"
            android:gravity="center"

            android:text="Pause  Work"
            android:textColor="@color/red_new"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_FinishWork"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"

            android:background="@drawable/round_corner_btn2_red_new"
            android:gravity="center"
            android:text="Finished with job"
            android:textColor="@color/red_new"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnChangeTimeCode"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"

            android:background="@drawable/round_corner_btn2_red_new"
            android:gravity="center"
            android:text="Change Time Code"
            android:textColor="@color/red_new"
            android:textSize="15sp" />
    </LinearLayout>


</LinearLayout>