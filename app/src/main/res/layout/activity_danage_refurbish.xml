<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".tech.billable_timesheet.Clock_Submit_Type_Activity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/linerfortime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3" >

                <ImageView
                    android:id="@+id/merchantname"
                    android:layout_width="0sp"
                    android:layout_height="40sp"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="right"
                    android:layout_marginLeft="-10sp"
                    android:layout_weight="2" />

                <TextView
                    android:id="@+id/timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/merchantname"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/merchantname"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:lines="2"
                    android:maxLines="2"
                    android:text="Time Clock 00:00"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/clientname" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/eusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout1"
            android:background="@drawable/gradientimage" >

            <ImageView
                android:id="@+id/missing"
                android:layout_width="80sp"
                android:layout_height="40sp"

                android:gravity="center"
                android:text="Missing Crates "
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/missing"
                android:text="Hallieburtonâ€™s Crates"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/clientname" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eusername"
            android:layout_marginTop="5sp"
            android:background="@drawable/gradientimage" >

            <ImageView
                android:id="@+id/homeimg"
                android:layout_width="40sp"
                android:layout_height="20sp"

                android:gravity="center"
                android:text="Missing Crates "
                android:visibility="gone" />

            <TextView
                android:id="@+id/homescreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="8sp"
                android:layout_toRightOf="@+id/homeimg"
                android:text="Home Screen"
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/eusername1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home"
            android:layout_marginTop="10sp"
            android:background="@color/grey" >

            <TextView
                android:id="@+id/textView1rr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"
                android:text="Crate updated location "
                android:textColor="@android:color/white"
                android:textSize="@dimen/headersname" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/oklayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eusername1"
            android:layout_marginTop="10sp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10sp" >

                <LinearLayout
                    android:id="@+id/first"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3" >

                    <TextView
                        android:id="@+id/textView2t"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:background="@drawable/gradientimage"
                        android:gravity="left"
                        android:paddingLeft="5sp"
                        android:singleLine="true"
                        android:text="Damage/Refurbish Report"
                        android:textSize="@dimen/clientname" />

                    <ImageView
                        android:id="@+id/selectvisd"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="-5sp"
                        android:layout_weight=".5"
                        android:clickable="true" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/first1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/first"
                    android:layout_marginTop="10sp"
                    android:weightSum="3" >

                    <TextView
                        android:id="@+id/textView2t1"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:background="@drawable/gradientimage"
                        android:gravity="left"
                        android:paddingLeft="5sp"
                        android:singleLine="true"
                        android:text="Pro-forma Packing  list"
                        android:textSize="@dimen/clientname" />

                    <ImageView
                        android:id="@+id/selectvis1d"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:clickable="true" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/first2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/first1"
                    android:layout_marginTop="10sp"
                    android:weightSum="3" >

                    <TextView
                        android:id="@+id/textView2t2"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:background="@drawable/gradientimage"
                        android:gravity="left"
                        android:paddingLeft="5sp"
                        android:singleLine="true"
                        android:text="New Packing list"
                        android:textSize="@dimen/clientname" />

                    <ImageView
                        android:id="@+id/selectvis2d"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight=".5"
                        android:clickable="true" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/first3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/first2"
                    android:layout_marginTop="10sp"
                    android:visibility="gone"
                    android:weightSum="3" >

                    <TextView
                        android:id="@+id/textView2t3"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:background="@drawable/gradientimage"
                        android:gravity="left"
                        android:paddingLeft="5sp"
                        android:singleLine="true"
                        android:text="Upload Photos"
                        android:textSize="@dimen/clientname" />

                    <ImageView
                        android:id="@+id/selectvis2d3"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight=".5"
                        android:clickable="true" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/oklayout"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:minHeight="50sp"
            android:weightSum="3" >

            <TextView
                android:id="@+id/gobacktosca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:adjustViewBounds="true"
                android:background="#CD0A41"
                android:gravity="center"
                android:minHeight="30dip"
                android:minWidth="36dip"
                android:scaleType="center"
                android:text="Stop   Work"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/clientname" />
            <TextView
                android:id="@+id/pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:layout_marginLeft="5sp"
                android:adjustViewBounds="true"
                android:background="#CD0A41"
                android:gravity="center"
                android:minHeight="30dip"
                android:minWidth="36dip"
                android:scaleType="center"
                android:text="Pause  Work"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/clientname" />

            <TextView
                android:id="@+id/gomissi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_weight="1.5"
                android:adjustViewBounds="true"
                android:background="#CD0A41"
                android:gravity="center"
                android:minHeight="30sp"
                android:minWidth="36sp"
                android:scaleType="center"
                android:text="Finished with job"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/clientname" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>