<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardElevation="5sp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/row_jobFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <View
            android:id="@+id/view1"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="#E4DFDF"

            />

        <Button
            android:id="@+id/serial_no"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_gravity="center_vertical"
            android:layout_marginLeft="-15dp"
            android:background="@drawable/round_corner"
            android:elevation="4dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="1"
            android:textColor="#fff"
            android:textSize="14sp"
            android:textStyle="normal"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="vertical"
            android:padding="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/list_showFile_rowTopMargin"
                android:orientation="horizontal">

                <TextView
                    style="@style/CustomTextView_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Job #" />

                <TextView
                    android:id="@+id/tv_job_number"
                    style="@style/CustomTextView_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/list_showFile_rowTopMargin"
                android:orientation="horizontal">

                <TextView
                    style="@style/CustomTextView_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Company" />

                <TextView
                    android:id="@+id/tv_company"
                    style="@style/CustomTextView_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/list_showFile_rowTopMargin"
                android:layout_marginBottom="@dimen/list_showFile_rowTopMargin"
                android:orientation="horizontal">

                <TextView
                    style="@style/CustomTextView_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="User" />

                <TextView
                    android:id="@+id/tv_User"
                    style="@style/CustomTextView_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/list_showFile_rowTopMargin"
                android:layout_marginBottom="@dimen/list_showFile_rowTopMargin"
                android:orientation="horizontal">

                <TextView
                    style="@style/CustomTextView_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Vendor" />

                <TextView
                    android:id="@+id/tv_Vendor"
                    style="@style/CustomTextView_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/list_showFile_rowTopMargin"
                android:layout_marginBottom="@dimen/list_showFile_rowTopMargin"
                android:orientation="horizontal">

                <TextView
                    style="@style/CustomTextView_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Description" />

                <TextView
                    android:id="@+id/tv_Desc"
                    style="@style/CustomTextView_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/list_showFile_rowTopMargin"
                android:layout_marginBottom="@dimen/list_showFile_rowTopMargin"
                android:orientation="horizontal">

                <TextView
                    style="@style/CustomTextView_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Quantity" />

                <TextView
                    android:id="@+id/tv_quantity"
                    style="@style/CustomTextView_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/list_showFile_rowTopMargin"
                android:layout_marginBottom="@dimen/list_showFile_rowTopMargin"
                android:orientation="horizontal">

                <TextView
                    style="@style/CustomTextView_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cost($)" />

                <TextView
                    android:id="@+id/tv_cost"
                    style="@style/CustomTextView_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/list_showFile_rowTopMargin"
                android:layout_marginBottom="@dimen/list_showFile_rowTopMargin"
                android:orientation="horizontal">

                <TextView
                    style="@style/CustomTextView_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total($)" />

                <TextView
                    android:id="@+id/tv_total"
                    style="@style/CustomTextView_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgvw_edit"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:drawableTint="@color/icon_color"
                    android:src="@drawable/edit" />


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>