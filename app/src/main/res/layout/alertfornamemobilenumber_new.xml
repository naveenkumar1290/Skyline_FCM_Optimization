<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/corner_round"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <!---add your views here-->
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/style_DialogTitle"

                android:text="Your Details"



                />

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="match_parent"

                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/nammm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView

                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="Name"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView

                        android:id="@+id/namedata"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="17sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/maob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nammm"
                    android:layout_marginTop="10sp"
                    android:background="@android:color/white"
                    android:weightSum="2">

                    <TextView

                        android:id="@+id/mobil"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="Mobile"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView

                        android:id="@+id/mobiledata"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="17sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/okk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/maob"
                    android:layout_marginTop="20sp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/okbuton"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_corner_btn2_new"
                        android:gravity="center"
                        android:minHeight="50sp"

                        android:text="  Ok  "
                        android:textColor="@color/btn_text_sky_blue"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/cancelbuton"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5sp"

                        android:layout_weight="1"
                        android:background="@drawable/round_corner_btn2_new"
                        android:gravity="center"
                        android:minHeight="50sp"
                        android:text="Cancel"
                        android:textColor="@color/btn_text_sky_blue"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="top|right"
            android:clickable="true"
            android:src="@drawable/error_1"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>