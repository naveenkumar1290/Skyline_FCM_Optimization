<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".old_activity.Routinestopingwork" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/linerfortime"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/merchantname"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="left"


                        />

                    <TextView
                        android:id="@+id/timer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:lines="2"
                        android:maxLines="2"
                        android:paddingRight="15dp"
                        android:text="Time Clock 00:00"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="@dimen/clientname" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/eusername"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout1">

                <ImageView
                    android:id="@+id/missing"
                    android:layout_width="100sp"
                    android:layout_height="40sp"

                    android:gravity="center"
                    android:text="Missing Crates "
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/missing"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/clientname" />


                <android.widget.ImageView
                    android:id="@+id/homeacti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/homeblue" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/eusername1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eusername"
                android:layout_marginTop="10sp"
                >

                <TextView
                    android:id="@+id/textView1rr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:gravity="center"
                    android:layout_centerVertical="true"
                    android:text="Stop  Work"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                  android:textStyle="bold"
                    android:textSize="17sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/routine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eusername1"
                android:layout_marginTop="10sp"
                >

                <TextView
                    android:id="@+id/routinetext"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Routine Stoppage of Work"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/clientname" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/plslist"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/routine"
                android:layout_marginTop="10sp"
                 >

                <TextView
                    android:id="@+id/plslisttext"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Please list your reason for stoping work :"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/clientname" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/editte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plslist"
                android:layout_marginTop="10sp"
               >

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:ems="10"
                    android:hint="List of reasons" >
                </EditText>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editte"
                android:layout_marginTop="20sp"
                android:gravity="center"
                android:minHeight="50sp"
                android:weightSum="2" >

                <TextView
                    android:id="@+id/gobacktosca"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/round_corner_btn2_new"
                    android:gravity="center"

                    android:scaleType="center"
                    android:text="Go Back"
                    android:textColor="@color/btn_text_sky_blue"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/gomissi"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5sp"
                    android:layout_weight="1"
                 android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/round_corner_btn2_red_new"
                    android:gravity="center"


                    android:text="Stop work due to these Issues"
                    android:textColor="@color/red_new"
                    android:textSize="13sp" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>