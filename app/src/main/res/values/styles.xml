    <style name="CustomTextView_title">
        <!--<item name="android:textColor">#A85E4F</item>-->
        <item name="android:textStyle">normal</item>
        <!--<item name="android:textAppearance">?android:attr/textAppearanceLarge</item>-->
        <item name="android:textColor">@color/primaryTextColorDark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginRight">4dp</item>

    </style>
    <style name="CustomTextView_text">
      <item name="android:textColor">@android:color/tab_indicator_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_weight">.5</item>
    </style>

    <!--  <item name="android:textColor">@color/primaryTextColor</item>-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme_Dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>
    <style name="AppBaseTheme1" parent="@style/Theme.AppCompat.Light">
        <!-- API 14 theme customizations can go here. -->
    </style>
    <style name="MyAppCompatDialogTheme" parent="AppBaseTheme1">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
